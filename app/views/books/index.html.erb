<div class="container px-5 px-sm-0">
  <%= render 'layouts/error', model: @book %>
  <div class="row">
   <div class="col-md-3">
      <%= render 'users/form.profile', user: @user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr id="book_<%= book.id %>">
                <td>
                  <%= link_to user_path(book.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, fallback: 'no_image.jpg', size: '50x50' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                  </td>
                <td><%= book.body %></td>
                <td class="favorite-btn"><%= render 'favorites/favorite-button', book: book %></td>
                <td class="comments_count">
                  コメント数：<%= book.book_comments.count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>